<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control' %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :status %>
  <%= select_tag :status, options_for_select([["User", 0], ["Staff", 1], ["Manager", 2]]) %>

  <% if current_user.admin? && !current_user?(user) %>
    <%= f.label :dental_number %>
    <%= f.text_field :dental_number, class: 'form-control' %>
  <% end %>

  <%= f.submit yield("Save changes"), class: "btn btn-primary" %>
<% end %>