<%= form_for(@patient, :url => {:action => 'update'}) do |f| %>

  <%= f.label :allergies %>
  <%= f.text_field :allergies, class: 'form-control' %>

  <%= f.label :note %>
  <%= f.text_field :note, class: 'form-control' %>

  <%= f.label :phoneNumber %>
  <%= f.text_field :phoneNumber, class: 'form-control' %>

  <%= f.label :user %>
  <%= f.collection_select :user_id, User.all, :id, :first_name, include_blank: true %>

  <%= f.label :timespent %>
  <%= f.input :timespent, as: :timespent, :minute_step => 15 %>

  <%= f.submit yield("Save changes"), class: "btn btn-primary" %>
<% end %>